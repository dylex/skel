local ip
local stream
local -a servers

servers=(scfire-chi0l-1.stream.aol.com scfire-chi0l-2.stream.aol.com scfire-dll0l-1.stream.aol.com scfire-dll0l-2.stream.aol.com scfire-ntc0l-1.stream.aol.com scfire-ntc0l-2.stream.aol.com scfire-nyk0l-1.stream.aol.com scfire-nyk0l-2.stream.aol.com)
ip=${servers[$RANDOM % $#servers]}
case $1 in
	(m*) stream=1045 ;;
	(n*) stream=1047 ;;
	(*) stream=1046 ;;
esac

mplaya "http://$ip:80/stream/$stream"
