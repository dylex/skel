deflogin off
defflow off
defscrollback 1024
#shell -zsh
shelltitle -
startup_message off
caption always ' %-Lw%{Wk}%n%f %t%{-}%+Lw %=%?%{.r}%u%{-} %?%?%{=u kw}%h%{-} %?%{b}%l %{-kc}%c '
bell_msg '^GBell in window %n'
