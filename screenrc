#nethack off
maptimeout 50
setenv SHLVL 0
screen -t - 0 -zsh

bind / displays
bind ; lockscreen
bind h prev
bind s next
bind t focus down
bind n focus up
bind l next
bind j focus down
bind k focus up
bind ` select 0
bind 0 select 10

bind \^ screen -T screen-256color -t ht  6 elinks
bind & screen -t finch 7 finch
bind * screen -T screen-256color -t gale 8 ginsu
bind ( screen -t moo  9 tf
bind ) screen -t logs 10 watchlogs

