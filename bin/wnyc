#!/bin/sh
ext=
case $1 in
	(-m) ext= ; shift ;;
	(-a) ext=.aac ; shift ;;
esac
which=fm939.wnyc.org/wnycfm
case $1 in
	(f*) which=fm939.wnyc.org/wyncfm ; shift ;;
	(a*) which=am820.wnyc.org/wnycam ; shift ;;
	(q*) which=stream.wqxr.org/wqxr ; shift ;;
esac
exec mplayer -profile music "$@" http://$which$ext
